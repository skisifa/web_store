  <!-- ***** Header Area End ***** -->

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-content">

          <!-- ***** Banner Start ***** -->
          <div class="main-banner">
            <div class="row">
              <div class="col-lg-7">
                <div class="header-text">
                  <h6>Welcome To Cyborg</h6>
                  <h4><em>Browse</em> Our Popular Games Here</h4>
                  <div class="main-button">
                    <a href="/browse">Browse Now</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- ***** Banner End ***** -->

          <!-- ***** Most Popular Start ***** -->
          <div class="most-popular">
            <div class="row">
              <div class="col-lg-12">
                <div class="row searchBar heading-section">
                  <div class="col-lg-6 col-sm-12">
                    <h4 class=""><em>Type any Game</em> On Epic</h4>
                  </div>
                  <div class="search col-lg-6 col-sm-12">
                    <form id="go" method="get">
                      <input placeholder="Search here" id="search" type="text" value="">
                    <button type="submit">GO</button>
                    </form>
                  </div>
                </div>
                <div class="row">
                  <%items.forEach((item)=>{%>
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                      <div class="item">
                        <div class="discount">
                          <%=item.discount%>
                        </div>
                        <div id="newprice" class='<%=(item.newPrice == "Comming Soon") ? "comming" : "newPrice" %>'>
                          <%=(item.newPrice == "Comming Soon") ? "Comming Soon" : item.newPrice %>
                        </div>
                        <div id="oldprice" class="oldPrice" style="text-decoration: line-through">
                          <%=item.oldPrice%>
                        </div>
                        <img src="<%=item.image%>" alt="" />
                        <div class="details">
                          <h4>
                            <%=item.title%>
                          </h4>
                        </div>
                      </div>
                    </div>
                    <%})%>
                      <div class="">
                        <!-- added by raheem start-->
                        <ul class="arrow">
                          <li><a id="previousPage" class="particle" role="button" aria-label="Go to 57 page"><</a></li>
                          <li><a class="particle active" role="button" href="/browse?page=1&count=40" aria-label="Page 1">1</a></li>

                          <li><a class="particle" role="button" href="/browse?page=2&count=40" >2</a></li>

                          <li><a class="particle" role="button" href="/browse?page=3&count=40" >3</a></li>

                          <li><a class="particle" role="button" href="/browse?page=4&count=40" >4</a></li>

                          <li><a class="particle" role="button" href="/browse?page=5&count=40" >5</a></li>
                          <li><a class="particle" role="button" href="#" aria-label="...">...</a></li>
                          <li><a id="pagedzb" class="particle" role="button" href="/browse?page=<%=lastPage%>&count=40" "><%=lastPage%></a></li>
                          <li><a id="nextPage" class="particle" role="button" ">></a></li>
                        </ul>
                        <script>
                          $(".item").on("click",function(){
                            let title = $(this).find(".details h4").text();
                            let new_price = $(this).find("#newprice").text();
                            let text = `I want this game ${title}, price: ${new_price}`;

                            let urlEncodedText = encodeURIComponent(text.replace(/\s+/g," ").trim());

                            // The specific number to send the message to
                            let phoneNumber = "<%=phoneNumber%>";
                            // Redirect to WhatsApp
                            window.location.href = `https://wa.me/${phoneNumber}?text=${urlEncodedText}`;
                          })

                          $("#go").on("submit",function(e){
                          e.preventDefault();
                          let search = $("#search").val().trim();
                          if(search != "" && search != " " && search !="   "){

                            window.open(`/browse?search=${search}`,"_self");
                          }
                          else{
                            window.open(`/browse`,"_self");
                          }
                  
                        });
                        </script>
                        <script>
                          window.onload = function () {
                            let links = document.querySelectorAll('.arrow .particle');
                            for (let i = 0; i < links.length; i++) {
                              if (links[i].href === window.location.href) {
                                links[i].className += ' active';
                              } else {
                                links[i].classList.remove('active');
                              }
                            }
                          }

                          // Step 1: Select the target element by its id.
                          // Step 1: Select the target element by its id.
                          let next = document.getElementById('nextPage');
                          let previous = document.getElementById('previousPage');
                          let lastPage = '<%=lastPage%>';
                          // Step 2: Add a click event listener to the target element.
                          next.addEventListener('click', function (event) {
                            // Prevent the default action.
                            event.preventDefault();

                            // Step 3: Extract the current page number from the window URL.
                            let currentURL = window.location.href;
                            let currentPage = parseInt(currentURL.match(/page=([0-9]+)/)[1], 10);

                            // Step 4: Increment the page number.
                            let nextPage = currentPage + 1;
                            
                            lastPage = parseInt(lastPage);
                            console.log(lastPage);
                            if (nextPage === lastPage+1) {
                              nextPage = 1;
                            }

                            // Step 6: Construct the new URL with the incremented page number.
                            let nextHref = currentURL.replace(/page=([0-9]+)/, 'page=' + nextPage);

                            // Step 7: Navigate to the new URL.
                            window.location.href = nextHref;
                          });

                          previous.addEventListener('click', function (event) {
                            // Prevent the default action.
                            event.preventDefault();

                            // Step 3: Extract the current page number from the window URL.
                            let currentURL = window.location.href;
                            let currentPage = parseInt(currentURL.match(/page=([0-9]+)/)[1], 10);

                            // Step 4: Increment the page number.
                            let nextPage = currentPage - 1;
                            
                            lastPage = parseInt(lastPage);
                            console.log(lastPage);
                            if (nextPage === 0) {
                              nextPage = lastPage;
                            }

                            // Step 6: Construct the new URL with the incremented page number.
                            let nextHref = currentURL.replace(/page=([0-9]+)/, 'page=' + nextPage);

                            // Step 7: Navigate to the new URL.
                            window.location.href = nextHref;
                          });
                        </script>
                        <!-- added by raheem end-->
                      </div>
                </div>
              </div>
            </div>
          </div>
